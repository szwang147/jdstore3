<h1> edit a product</h1>
<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>
  <br>

  <% if @product.image.present? %>
  <span>目前产品图</span>
  <br>
  <%= image_tag(@product.image.medium.url) %>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.submit "submit", data:{disable_with: "submitting"} %>

  <% end %>
