<h2> Product List</h2>
<div class="pull-right", style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class:"btn btn-lg btn-info") %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220px">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th width="100px">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url, class:"thumbnail") %>
          <% else %>
            <%= image_tag("http://img1.gamersky.com/image2016/07/20160715_gxh_289_5/gamersky_01small_02_2016715912313.jpg",
            style:"height: 200px; width: 200px;",  class:"thumbnail") %>
          <% end %>
        <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to("Edit", edit_admin_product_path(product)) %>
          <%= link_to("Delete", admin_product_path(product), method: :delete, data:{confirm:"are you sure?"}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
