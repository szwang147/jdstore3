<div class="row">
  <div class="col-md-12">
    <%= link_to("清空购物车", clean_carts_path, method: :delete, class:"pull-right",
    style:"text-decoration: underline", data:{confirm:"你确定要清空购物车么？"}) %>
    <h2> 购物车 </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to products_path(cart_item.product) do  %>
              <% if cart_item.product.image.present? %>
              <%= image_tag(cart_item.product.image.thumb.url, class:"thumbnail") %>
              <% else %>
              <%= image_tag("http://img1.gamersky.com/image2016/07/20160715_gxh_289_5/gamersky_01small_02_2016715912313.jpg",
              style:"height: 200px; width: 200px;",  class:"thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to(cart_item.product.title, products_path(cart_item.product)) %>
          </td>
          <td>
            <%= cart_item.product.price %>
          </td>
          <td>
            <%= cart_item.quantity %>
          </td>
          <td>

          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="total clearfix">
      <span class="pull-right">
        <span> 总计<%= render_cart_total_price(current_cart) %> RMB </span>
      </span>
    </div><hr>
    <div class="checkout clearfix">
        <%= link_to("确认结账", "#", method: :post, class:"btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
